function _osci_tk_users_json_error($error = '') {
	print json_encode(array(
		'success' => FALSE,
		'error' => $error
	));
	drupal_exit();
}

function _osci_tk_users_json_success($user = null) {
	$ret = array('success' => TRUE);
	if ($user) {
		$ret['user'] = $user;
	}
	print json_encode($ret);
	drupal_exit();
}