	$items['api/users'] = array(
		'title'			 	=> t('Process a user request'),
		'page callback'	 	=> 'osci_tk_users_request',
		'access callback'	=> TRUE
	);

	$items['api/users/demo'] = array(
		'title'			 	=> t('Demonstrate User API'),
