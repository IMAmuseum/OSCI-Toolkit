function osci_tk_body_copy_node_update($node)
{
    $cacheKey = "osci_tk_body_copy_" . $node->nid;
    cache_clear_all($cacheKey, 'cache');
    
    $cacheKey = "osci_tk_body_copy_" . $node->nid . '_html5';
    cache_clear_all($cacheKey, 'cache');
    
    $cacheKey = "osci_tk_body_copy_" . $node->nid . '_print';
    cache_clear_all($cacheKey, 'cache');
    
    $cacheKey = "osci_tk_toc_" . $node->nid;
    cache_clear_all($cacheKey, 'cache');
}

function book_export_pdf($nid) {
    if (user_access('access printer-friendly version')) {
        $export_data = array();
        $node = node_load($nid);

        if (isset($node->book)) {
            $tree = book_menu_subtree_data($node->book);
            $contents = book_export_traverse($tree, 'book_node_export_pdf');
        }

        $html = theme('osci_tk_book_export_pdf', array('title' => $node->title, 'contents' => $contents, 'depth' => $node->book['depth']));

        require_once(libraries_get_path('dompdf') . '/dompdf_config.inc.php');

        $dompdf = new DOMPDF();
        $dompdf->set_base_path(realpath('./'));
        $dompdf->load_html($html);

        $dompdf->render();


        $filename = strtolower($node->title);
	    $filename = str_replace(
	        array("#"," ", "'", "\"", "__", "&", "/", "\\", "?", "-"),
	        array("_", "_", "", "", "_", "and", "_", "_", "", "_"),
	        $filename
	    );

        $dompdf->stream($filename . ".pdf");
    } else {
        drupal_access_denied();
    }
}

function book_node_export_pdf($node, $children = '') {
    $node->rendered = osci_tk_body_copy_render_layout($node->nid, 'print');

    return theme('osci_tk_book_node_export_pdf', array('node' => $node, 'children' => $children));
}

function osci_tk_body_copy_sort_elements($elements)
{
    $bodyCopyElements = array();
    foreach($elements as $k => $v) {
        if (strpos($k, 'field_osci_tk_') === 0) {
            $elements[$k]['#theme'] = 'body_copy_field_html5';
        }
        if (is_array($v) && isset($v['#field_type']) && $v['#field_type'] === 'osci_tk_body_copy') {
            $bodyCopyElements[$k] = $v['#weight'];
        }
    }
    asort($bodyCopyElements);

    return $bodyCopyElements;
}

function osci_tk_body_copy_render_layout($nid, $format = 'html5')
{
    $cacheKey = "osci_tk_body_copy_" . $nid . '_' . $format;
    $output = &drupal_static($cacheKey);
    if (!isset($output)) {
        if ($cache = cache_get($cacheKey)) {
            $output = $cache->data;
        }
        else {
            require_once(libraries_get_path('simplehtmldom') . '/simple_html_dom.php');    

            $node = node_load($nid);
            $elements = node_view($node, 'body_copy');
            $footnotes = array();
            $footnoteOrder = array();
            $footnoteCount = 0;
            $figures = array();
            $figureOrder = array();
            $figureCount = 0;
            $figureOccurenceCount = array();

            $plateNid = null;
            if (isset($elements['field_osci_tk_plate_image'])) {
                $plateNid = ($elements['field_osci_tk_plate_image']['#items'][0]['nid']) ? $elements['field_osci_tk_plate_image']['#items'][0]['nid'] : null;
                $plateCaption = $node->field_osci_tk_navigation_title['und'][0]['value'];
                unset($elements['field_osci_tk_plate_image']);
            }

            $catalogNumber = (isset($node->field_osci_tk_catalogue_number['und']) && $node->field_osci_tk_catalogue_number['und'][0]['value']) ? $node->field_osci_tk_catalogue_number['und'][0]['value'] : null;
            $bodyCopyElements = osci_tk_body_copy_sort_elements($elements);

            $paragraphCount = 0;

            // get url for path
            $paragraphUrl = url("node/{$nid}/reader", array('absolute' => TRUE, 'fragment' => 'para-'));

            foreach ($bodyCopyElements as $k => $weight) {
                $v = $elements[$k];
                $elements[$k]['#theme'] = 'body_copy_field_' . $format;

                if (strlen(trim($v[0]['#markup']))) {
                    $html = str_get_html($v[0]['#markup']);

                    $paragraphs = $html->find('p');
                    if (count($paragraphs)) {
                        foreach($paragraphs as $p) {
                            $paragraphCount++;
                            $p->innertext = "<a href=\"" . $paragraphUrl . $paragraphCount . "\" class=\"osci_tk_paragraph_identifier osci_tk_paragraph_{$paragraphCount}\" data-paragraph_id=\"{$paragraphCount}\">{$paragraphCount}</a>" . $p->innertext();
                            $newClass = $p->class ? $p->class . ' ' : '';
                            $p->class = $newClass . "osci_tk_paragraph_{$paragraphCount} osci_tk_paragraph";
                            $p->setAttribute("data-paragraph_id", $paragraphCount);
                        }
                    }

                    $v[0]['#markup'] = $html->save();
                    $html = str_get_html($v[0]['#markup']);

                    $figLinks = $html->find("a.figure-link");
                    if (count($figLinks)) {
                        foreach ($figLinks as $link) {
                            $fId = $link->innertext();

                            if (isset($figureOccurenceCount[$fId])) {
                                $figOccur = ++$figureOccurenceCount[$fId];
                            } else {
                                $figOccur = $figureOccurenceCount[$fId] = 1;
                            }

                            $numberTemplate = ($v[0]['osci_tk_figures'][$fId]['number_template']) ? $v[0]['osci_tk_figures'][$fId]['number_template'] : "Fig. cat#.fig#";
                            
                            if ($figOccur === 1) {
                                $numberTemplate = str_replace(
                                    array('cat#', 'fig#'),
                                    array($catalogNumber, ++$figureCount),
                                    $numberTemplate
                                );
                            }
                            $v[0]['osci_tk_figures'][$fId]['number_template'] = $numberTemplate;                            

                            $link->innertext = $numberTemplate;
                            $link->setAttribute("data-occurence", $figOccur);
                            $figureOrder[] = $fId;
                        }
                    }

                    $v[0]['#markup'] = $html->save();
                    $html = str_get_html($v[0]['#markup']);

                    $fnLinks = $html->find("a.footnote-link");
                    if (count($fnLinks)) {
                        foreach ($fnLinks as $link) {
                            $fnId = $link->innertext();

                            $link->innertext = ++$footnoteCount;
                            $footnoteOrder[$footnoteCount] = $fnId;
                        }
                    }

                    $elements[$k][0]['#markup'] = $html->save();
                } else {
                    unset($elements[$k]);
                }

                $footnotes += $v[0]['osci_tk_footnotes'];
                $figures += $v[0]['osci_tk_figures'];
            }

            if (count($footnotes)) {
                $finalFootnotes = array();
                foreach($footnoteOrder as $k => $fnId) {
                    if (isset($footnotes[$fnId])) {
                        $finalFootnotes[$k] = array_merge($footnotes[$fnId], array('fnCount' => $k));
                    }
                }

                $elements['field_osci_tk_footnotes'] = array(
                    '#theme'            => 'body_copy_field_html5',
                    '#title'            => 'Footnotes',
                    '#weight'           => 999,
                    '#label_display'    => 'inline',
                    '#field_type'       => 'osci_tk_body_copy',
                    '#field_name'       => 'field_osci_tk_footnotes',
                    '#attributes'        => array('class' => array('osci_tk_column_break')),
                    0 => array(
                        '#markup' => theme('body_copy_footnotes', array('footnotes' => $finalFootnotes))
                    ),
                );
            }

            if (count($figures) || $plateNid) {
                $finalFigures = array();

                if ($plateNid) {
                    $plateId = 'osci_tk_plate_fig';
                    $finalFigures[$plateId] = array(
                        'figure_reference' => $plateNid,
                        'number_template' => ($catalogNumber) ? "Cat. {$catalogNumber}" : ' ',
                        'caption' => $plateCaption,
                        'position' => 't',
                        'columns' => '55%',
                        'id' => $plateId,
                        'format' => 'footnote',
                        'figCount' => 0,
                        'figOccurences' => 1
                    );
                }

                $figureCount = 0;
                foreach($figureOrder as $k => $fId) {
                    if (isset($figures[$fId])) {
                        if (isset($finalFigures[$fId])) {
                            $finalFigures[$fId]['figOccurences']++;
                        } else {
                            $figureCount++;
                            $finalFigures[$fId] = array_merge($figures[$fId], array('figCount' => $figureCount, 'figOccurences' => 1, 'catalogNumber' => $catalogNumber));
                        }
                    }
                }

                $elements['field_osci_tk_figures'] = array(
                    '#theme'            => 'body_copy_field_' . $format,
                    '#title'            => 'Figures',
                    '#weight'           => 1000,
                    '#label_display'    => 'inline',
                    '#field_type'       => 'osci_tk_body_copy',
                    '#field_name'       => 'field_osci_tk_figures',
                    0 => array(
                        '#markup' => theme('body_copy_figures_' . $format, array('figures' => $finalFigures))
                    ),
                );
            }

            switch($format) {
                case 'print':
                    unset($elements['#theme']);
                    break;
                
                default:
                    $elements['#theme'] = 'body_copy_node';
            }
            
            unset($elements['#pre_render']);

            $output = render($elements);
            cache_set($cacheKey, $output, 'cache');
        }
    }
    
    switch ($format) {
        case 'print':
            return $output;
            break;
        
        default:
            print $output;
    }
}

