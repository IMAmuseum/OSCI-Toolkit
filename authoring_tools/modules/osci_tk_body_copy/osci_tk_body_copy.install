<?php

function osci_tk_body_copy_field_schema($field)
{
    $columns = array();

    if ($field['type'] == 'osci_tk_body_copy') {
        $columns = array(
            'body_copy' => array(
                'type' => 'text',
                'size' => 'big',
                'not null' => false
            ),
            'body_copy_format' => array(
                'type' => 'varchar',
                'length' => 255,
                'not null' => false
            ),
            'footnotes' => array(
                'type' => 'text',
                'size' => 'big',
                'not null' => false
            ),
            'footnote_index' => array(
                'type' => 'int',
                'not null' => false
            ),
            'figures' => array(
                'type' => 'text',
                'size' => 'big',
                'not null' => false
            ),
            'figure_index' => array(
                'type' => 'int',
                'not null' => false
            )
        );
    }

    return array('columns' => $columns);
}


