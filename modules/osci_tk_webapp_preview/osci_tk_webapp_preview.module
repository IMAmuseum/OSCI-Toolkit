	foreach($js as $jsFile) {
		$finalJs[$jsFile] = array(
			"data" => $jsFile,
			"preprocess" => true
		);
	}
	$js = array(file_create_url(drupal_build_js_cache($finalJs)));
	$finalCss = array();
	foreach($css as $cssFile) {
